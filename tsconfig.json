{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@bn-schema/*": [
        "./database/schema/*"
      ],
      "@bn-enum/*": [
        "./shared/enums/*"
      ],
      "@bn-validator/*": [
        "./shared/validators/*"
      ],
      "@bn-decorator/*": [
        "./shared/decorators/*"
      ],
      "@bn-interceptor/*": [
        "./shared/interceptors/*"
      ],
      "@bn-pipe/*": [
        "./shared/pipes/*"
      ],
      "@bn-guard/*": [
        "./shared/guards/*"
      ],
      "@bn-extension/*": [
        "./shared/extensions/*"
      ],
      "@bn-database/*": [
        "./database/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
    "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}